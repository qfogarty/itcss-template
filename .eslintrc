{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": "warn",
        "react/react-in-jsx-scope": "off"
    },
    "globals": {
        "React": "writable"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
